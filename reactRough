 onClickHandler = (id,positon) => {
        
        axios.patch(`http://localhost:3000/games/${id}/move/${positon}`)
          .then(res => {
            console.log(res,'ressssssssssss');
            console.log(res.data,'dataaaaaaaaaaaaaaaaaa');

            this.setState({
                message: res.data.message
              });
          })
      }

